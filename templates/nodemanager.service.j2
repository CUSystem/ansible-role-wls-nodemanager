[Unit]
Description=WebLogic Nodemanager service, runs independently and before weblogic.service.
After=network.target
 
[Service]
User={{ oracle_user }}
Group={{ oracle_group }}
Type=simple
WorkingDirectory={{ nodemanager_home }}
ExecStart={{ domain_home }}/bin/startNodeManager.sh
ExecStop={{ domain_home }}/bin/stopNodeManager.sh
PIDFile={{ nodemanager_home }}/nodemanager.process.id
Restart=on-failure
RestartSec=1 

[Install]
WantedBy=default.target
